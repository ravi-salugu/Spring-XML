<?xml version = "1.0" encoding = "UTF-8"?>

<beans xmlns = "http://www.springframework.org/schema/beans"

       xmlns:xsi = "http://www.w3.org/2001/XMLSchema-instance"

       xsi:schemaLocation = "http://www.springframework.org/schema/beans

   http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">

    <!-- A simple bean definition -->

    <bean id = "actor1" class = "com.stackroute.domain.Actor">

        <!-- collaborators and configuration for this bean go here -->

        <constructor-arg index="0" value="Ravi"/>

        <constructor-arg index="1" value="Male"/>

        <constructor-arg index="2" value="22"/>

    </bean>

    <bean id = "actor2" class = "com.stackroute.domain.Actor">

        <!-- collaborators and configuration for this bean go here -->

        <constructor-arg index="0" value="Dinesh"/>

        <constructor-arg index="1" value="Male"/>

        <constructor-arg index="2" value="92"/>

    </bean>

    <bean id = "actor3" class = "com.stackroute.domain.Actor">

        <!-- collaborators and configuration for this bean go here -->

        <constructor-arg index="0" value="Mahesh"/>

        <constructor-arg index="1" value="Male"/>

        <constructor-arg index="2" value="52"/>

    </bean>

    <bean id = "movie" class = "com.stackroute.domain.Movie">

        <constructor-arg index="0" value="bahubali"/>

        <constructor-arg index="1" ref="actor1"/>

    </bean>

</beans>

